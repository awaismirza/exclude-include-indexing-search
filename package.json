{
  "name": "exclude-include-indexing-search",
  "displayName": "exclude-include-indexing-search",
  "description": "Folder Include/Exclude Manager is a lightweight Visual Studio Code extension that gives you quick, intuitive control over which folders are included or excluded from workspace search and indexing. Instead of manually editing settings.json, you can now manage search visibility directly from the Explorer with a simple rightâ€‘click.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:exclude-include-indexing-search.excludeFolderFromSearch",
    "onCommand:exclude-include-indexing-search.includeFolderInSearch"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "exclude-include-indexing-search.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "exclude-include-indexing-search.excludeFolderFromSearch",
        "title": "Exclude Folder from Search",
        "category": "Folder Include/Exclude Manager"
      },
      {
        "command": "exclude-include-indexing-search.includeFolderInSearch",
        "title": "Include Folder in Search",
        "category": "Folder Include/Exclude Manager"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "exclude-include-indexing-search.excludeFolderFromSearch",
          "when": "resourceUri.scheme == 'file' && resourceUri.fsPath =~ /\/[^.][^\/]*$/",
          "group": "navigation@10"
        },
        {
          "command": "exclude-include-indexing-search.includeFolderInSearch",
          "when": "resourceUri.scheme == 'file' && resourceUri.fsPath =~ /\/[^.][^\/]*$/",
          "group": "navigation@11"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
